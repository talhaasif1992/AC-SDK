<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        layout="@layout/layout_progress"
        android:visibility="gone" />

    <com.augmentcare.patient.adapters.CustomViewPager
        android:id="@+id/vpTutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.augmentcare.patient.adapters.CustomViewPager>

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/_22sdp"
            android:fontFamily="@font/raleway_bold"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:fontFamily="@font/futura_medium_bt"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_25sdp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/raleway_bold"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:text="Next Step"
            android:background="@drawable/btn_green_gradient_round_cornered_background"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            />
        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:src="@drawable/ic_back"
            android:rotation="270"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_27sdp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_medium_bt"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:text="Later"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

    </FrameLayout>
</FrameLayout>