<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:animateLayoutChanges="true"
    android:minWidth="200dp"
    android:orientation="vertical">

    <include layout="@layout/intercom_attribute_name"/>

    <TextView
        style="@style/intercom_attribute_input_layout"
        android:id="@+id/attribute_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intercom_attribute_input_height"
        android:background="@drawable/intercom_text_attribute_input_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/intercom_list_arrow_down"
        android:textColor="@color/intercom_attribute_input_text"
        android:textColorHint="@color/intercom_attribute_input_hint"
        android:hint="@string/intercom_choose_one"
        android:gravity="center_vertical"
        android:textSize="@dimen/intercom_attribute_text_size"
        android:singleLine="true"
        android:ellipsize="end"/>

    <include layout="@layout/intercom_attribute_error"/>

</LinearLayout>
