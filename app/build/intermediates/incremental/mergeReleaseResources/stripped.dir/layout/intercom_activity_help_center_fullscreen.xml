<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/link_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intercom_post_gradient"
    android:orientation="vertical">

    <io.intercom.android.sdk.views.IntercomToolbar
        android:id="@+id/intercom_toolbar"
        style="@style/intercom_toolbar_style"/>

    <FrameLayout
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/intercom_white"
        android:clipChildren="false">

        <ProgressBar
            android:id="@+id/loading_view"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/intercom_progress_wheel"
            tools:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/intercom_app_bar_shadow_height"
            android:background="@drawable/intercom_top_shadow"/>

    </FrameLayout>

</LinearLayout>
