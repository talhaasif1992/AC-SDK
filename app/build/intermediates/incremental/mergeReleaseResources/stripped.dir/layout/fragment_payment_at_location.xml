<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PaymentAtLocationFragment">

    <ImageView
        android:id="@+id/iv_pay_at_location"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/pay_by_cash_icon"
        app:layout_constraintBottom_toTopOf="@id/tv_pay_at_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_pay_at_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:fontFamily="@font/raleway"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:text="Hey! If You Wanted to Pay Cash to the Doctor\n Just Click the Button Below"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/btn_pay_at_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pay_at_location"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_pay_at_location"
        android:layout_width="0dp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:paddingStart="@dimen/_30sdp"
        android:text="Pay Cash On Location"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:textAllCaps="false"
        android:background="@drawable/btn_green_gradient_round_cornered_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_at_location"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_online_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Appointment Type is Online\nYou Can't Use Pay At Location Feature"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/raleway_bold"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>