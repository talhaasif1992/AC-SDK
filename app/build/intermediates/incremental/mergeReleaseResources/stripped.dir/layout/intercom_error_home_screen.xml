<?xml version="1.0" encoding="utf-8"?>
<io.intercom.android.sdk.views.IntercomErrorView
    android:id="@+id/error_layout_home_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:background="#fff">


    <TextView
        android:id="@+id/empty_text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/intercom_give_it_another_try"
        android:textColor="@color/intercom_grey_700"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_text_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/intercom_full_transparent_full_black"
        android:text="@string/intercom_reload"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/empty_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/empty_text_subtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/intercom_inbox_error_state_title"
        android:textColor="@color/intercom_error_state_title"
        android:textSize="20sp"/>

</io.intercom.android.sdk.views.IntercomErrorView>
