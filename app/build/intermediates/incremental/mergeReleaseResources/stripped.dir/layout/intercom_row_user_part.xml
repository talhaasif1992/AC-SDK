<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:descendantFocusability="blocksDescendants"
              android:gravity="end"
              android:orientation="horizontal"
              android:paddingRight="@dimen/intercom_cell_horizontal_padding">

    <io.intercom.android.sdk.views.ExpandableLayout
        android:id="@+id/intercom_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cellLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/intercom_conversation_row_margin"
            android:background="@drawable/intercom_bubble_background"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingEnd="@dimen/intercom_cell_horizontal_padding"
            android:paddingLeft="@dimen/intercom_cell_horizontal_padding"
            android:paddingRight="@dimen/intercom_cell_horizontal_padding"
            android:paddingStart="@dimen/intercom_cell_horizontal_padding"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:gravity="end"
                      android:layout_marginTop="3dp"
                      android:orientation="vertical"
                      app:intercomCanExpand="true">
            <TextView
                android:id="@+id/metadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/intercom_conversation_event_text_grey"
                android:textSize="14sp"
                tools:text="I am a user message"/>
            <TextView
                android:id="@+id/attribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone"
                android:textColor="@color/intercom_conversation_event_text_grey"
                android:textSize="14sp"/>
        </LinearLayout>
    </io.intercom.android.sdk.views.ExpandableLayout>
</LinearLayout>
