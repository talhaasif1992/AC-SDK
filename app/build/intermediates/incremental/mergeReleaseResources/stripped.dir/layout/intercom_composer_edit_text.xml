<?xml version="1.0" encoding="utf-8"?>
<EditText android:id="@+id/input_text"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:layout_marginLeft="24dp"
          android:layout_weight="1"
          android:background="@color/intercom_full_transparent_full_white"
          android:cursorVisible="true"
          android:hint="@string/intercom_reply_to_conversation"
          android:inputType="textCapSentences|textMultiLine"
          android:maxLines="@integer/intercom_max_composer_lines"
          android:minHeight="56dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:textColor="@color/intercom_grey_800"
          android:textColorHint="@color/intercom_input_text_hint_color"
          android:textSize="16sp"
          tools:ignore="UnusedAttribute"
          tools:layout_width="240dp"
          tools:text="This\nIs\nA\nLong\nMessage\nOf\n8\nLines"/>
