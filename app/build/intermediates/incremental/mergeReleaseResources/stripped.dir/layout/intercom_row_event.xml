<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/intercom_cell_horizontal_padding">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/intercom_avatar_size"
        android:layout_height="@dimen/intercom_avatar_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/intercom_conversation_row_icon_spacer"/>


    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/intercom_conversation_row_margin"
        android:textColor="@color/intercom_conversation_event_text_grey"
        android:textSize="14sp"
        tools:text="damien@wayneenterprises.com joined the conversation (added by Bruce)"/>
</LinearLayout>
