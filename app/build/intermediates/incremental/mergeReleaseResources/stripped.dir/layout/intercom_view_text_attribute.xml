<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:animateLayoutChanges="true"
    android:minWidth="200dp"
    android:orientation="vertical">

    <include layout="@layout/intercom_attribute_name"/>

    <FrameLayout
        style="@style/intercom_attribute_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/attribute_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/intercom_attribute_input_height"
            android:background="@drawable/intercom_text_attribute_input_background"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:textColor="@color/intercom_attribute_input_text"
            android:textColorHint="@color/intercom_attribute_input_hint"
            android:textSize="@dimen/intercom_attribute_text_size"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/attribute_submit"
            android:layout_width="@dimen/intercom_attribute_input_height"
            android:layout_height="@dimen/intercom_attribute_input_height"
            android:layout_gravity="end"
            android:background="@drawable/intercom_attribute_submit_button_background_ripple"
            android:padding="10dp"
            android:src="@drawable/intercom_attribute_submit_arrow" />

        <ImageView
            android:id="@+id/attribute_verified_tick"
            android:layout_width="@dimen/intercom_attribute_input_height"
            android:layout_height="@dimen/intercom_attribute_input_height"
            android:layout_gravity="end"
            android:padding="8dp"
            android:src="@drawable/intercom_attribute_verified_tick"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loading_view"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/intercom_attribute_input_height"
            android:layout_height="@dimen/intercom_attribute_input_height"
            android:layout_gravity="end"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/intercom_attribute_spinner_rotate"
            android:padding="10dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/flag_view"
            android:layout_width="30dp"
            android:layout_height="@dimen/intercom_attribute_input_height"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="@color/intercom_black"
            android:textSize="@dimen/intercom_attribute_text_size"
            android:visibility="gone"
            tools:text="ðŸ‡®ðŸ‡ª"/>
    </FrameLayout>

    <include layout="@layout/intercom_attribute_error"/>

</LinearLayout>
