<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/intercom_composer_toolbar_with_status_bar_height"
    android:background="@color/intercom_composer_full_screen_toolbar"
    android:fitsSystemWindows="@bool/intercom_composer_fits_system_windows"
    android:paddingTop="@dimen/intercom_composer_toolbar_content_offset"
    android:gravity="center_vertical"
    android:layout_gravity="top"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    app:elevation="0dp">

    <TextView android:id="@+id/toolbar_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/intercom_composer_tap_to_send"
              android:textColor="@color/intercom_white"
              android:textSize="16sp"/>

</androidx.appcompat.widget.Toolbar>
