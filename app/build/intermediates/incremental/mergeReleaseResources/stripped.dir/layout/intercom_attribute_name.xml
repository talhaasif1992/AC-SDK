<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/intercom_attribute_margin"
    android:layout_marginRight="@dimen/intercom_attribute_margin"
    android:layout_marginTop="@dimen/intercom_attribute_margin_top">

    <TextView
        android:id="@+id/attribute_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/intercom_black"
        android:textSize="@dimen/intercom_attribute_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/multi_attribute_label"
        tools:text="Name" />

    <TextView
        android:id="@+id/multi_attribute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/intercom_attribute_input_hint"
        android:textSize="@dimen/intercom_attribute_text_size"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1 / 3"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
