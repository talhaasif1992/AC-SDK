<?xml version="1.0" encoding="utf-8"?>
<io.intercom.android.sdk.views.IntercomErrorView android:id="@+id/error_layout_inbox"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <io.intercom.android.sdk.inbox.InboxEmptyRowsView android:layout_width="match_parent"
                                                      android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/intercom_empty_state_fade"/>

    <TextView
        android:id="@+id/empty_text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="@color/intercom_grey_700"
        android:textSize="16sp"
        tools:text="@string/intercom_empty_conversations"/>

    <TextView
        android:id="@+id/empty_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/empty_text_subtitle"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/intercom_error_state_title"
        android:textSize="20sp"
        tools:text="@string/intercom_no_conversations"/>

    <Button
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_text_subtitle"
        android:layout_centerHorizontal="true"
        android:background="@color/intercom_full_transparent_full_black"
        android:textAllCaps="true"
        tools:text="Tap to retry"/>

</io.intercom.android.sdk.views.IntercomErrorView>
