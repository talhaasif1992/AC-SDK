<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/link_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intercom_post_gradient"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/intercom_close"/>

    <FrameLayout
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/intercom_conversation_card_background"
        android:orientation="vertical">
        <io.intercom.android.sdk.views.ContentAwareScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            tools:alpha="1">
            <LinearLayout
                android:id="@+id/link_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:paddingBottom="28dp"
                android:paddingTop="28dp">
                <TextView android:id="@+id/title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:layout_marginRight="24dp"
                          android:textColor="@color/intercom_main_blue"
                          android:textSize="24sp"
                          tools:text="Title"/>

                <TextView android:id="@+id/description"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:layout_marginRight="24dp"
                          android:layout_marginTop="14dp"
                          android:lineSpacingExtra="4sp"
                          android:textColor="@color/intercom_grey_500"
                          android:textSize="15sp"
                          tools:text="Description"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="24dp"
                              android:layout_marginRight="24dp"
                              android:layout_marginTop="16dp"
                              android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/avatar_view"
                        android:layout_width="@dimen/intercom_avatar_size"
                        android:layout_height="@dimen/intercom_avatar_size"
                        android:layout_gravity="center"
                        tools:src="@android:drawable/sym_contact_card"/>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="14dp"
                                  android:orientation="vertical">
                        <TextView android:id="@+id/author"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/intercom_grey_500"
                                  android:textSize="15sp"
                                  tools:text="Author"/>
                        <TextView android:id="@+id/updated"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/intercom_grey_500"
                                  android:textSize="15sp"
                                  tools:text="Updated"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/intercom_grey_100"/>
            </LinearLayout>
        </io.intercom.android.sdk.views.ContentAwareScrollView>
        <LinearLayout
            android:id="@+id/link_composer_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/intercom_link_reaction_height"
            android:layout_gravity="bottom"
            android:background="@drawable/intercom_article_reaction_background"
            android:clipChildren="false"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/reaction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/intercom_article_question"
                android:textColor="@color/intercom_grey_500"
                android:textSize="14sp"/>
            <io.intercom.android.sdk.conversation.ReactionInputView
                android:id="@+id/reaction_input_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intercom_composer_height"
                android:clipChildren="false"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/link_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/intercom_toolbar_height"
            android:layout_gravity="top"
            android:alpha="0"
            android:background="@drawable/intercom_article_title_bar_background">
            <TextView
                android:id="@+id/title_bar_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/intercom_main_blue"
                android:textSize="18sp"
                tools:text="Title"/>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/loading_view"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/intercom_progress_wheel"
            tools:visibility="visible"/>

        <include layout="@layout/intercom_error_article"
                 android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>
