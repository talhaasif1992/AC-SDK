<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/new_conversation_card_layout"
              style="@style/intercom_card_with_border_and_shadow"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/intercom_home_card_margin"
              android:layout_marginRight="@dimen/intercom_home_card_margin"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/intercom_conversation_card_padding"
        android:layout_marginRight="@dimen/intercom_conversation_card_padding"
        android:layout_marginTop="@dimen/intercom_conversation_card_padding"
        android:text="@string/intercom_start_a_conversation"
        android:textColor="@color/intercom_black"
        android:textSize="16sp"
        tools:text="Start a conversation"/>

    <io.intercom.android.sdk.views.OfficeHoursTextView
        android:id="@+id/office_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/intercom_conversation_card_padding"
        android:layout_marginRight="@dimen/intercom_conversation_card_padding"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/intercom_conversation_card_summary_text"
        android:textSize="14sp"
        tools:text="The team typically replies in a few hours"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/intercom_conversation_card_padding"
        android:layout_marginLeft="@dimen/intercom_conversation_card_padding"
        android:layout_marginRight="@dimen/intercom_conversation_card_padding">

        <!--Layout constraints added programmatically-->
        <FrameLayout
            android:id="@+id/avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/new_conversation_button"
            style="@style/intercom_home_new_conversation_button"
            android:text="@string/intercom_new_conversation"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/see_previous"
            style="@style/intercom_home_all_conversation_button"
            android:text="@string/intercom_see_past_conversations"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
