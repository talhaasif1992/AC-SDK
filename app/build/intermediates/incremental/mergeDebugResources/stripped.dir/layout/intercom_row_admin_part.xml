<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
              android:paddingRight="@dimen/intercom_cell_horizontal_padding"
              android:paddingLeft="@dimen/intercom_cell_horizontal_padding">

    <io.intercom.android.sdk.views.ExpandableLayout
        android:id="@+id/intercom_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatarView"
                android:layout_width="@dimen/intercom_avatar_size"
                android:layout_height="@dimen/intercom_avatar_size"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/intercom_conversation_row_icon_spacer"/>

            <LinearLayout
                android:id="@+id/cellLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/intercom_conversation_row_margin"
                android:background="@drawable/intercom_bubble_background"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:paddingEnd="@dimen/intercom_cell_horizontal_padding"
                android:paddingLeft="@dimen/intercom_cell_horizontal_padding"
                android:paddingRight="@dimen/intercom_cell_horizontal_padding"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="start"
                      android:layout_marginTop="3dp"
                      android:gravity="start"
                      android:orientation="vertical"
                      app:intercomCanExpand="true">
            <TextView
                android:id="@+id/metadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/intercom_conversation_event_text_grey"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/attribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/intercom_conversation_event_text_grey"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>
    </io.intercom.android.sdk.views.ExpandableLayout>
</LinearLayout>
