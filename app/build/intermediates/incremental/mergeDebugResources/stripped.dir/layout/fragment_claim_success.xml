<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/btn_gradient_green"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:fontFamily="@font/raleway_bold"
                android:text="Claim Submitted"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_26ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center_vertical"
                android:text="Claim Amount:"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/claim_amount_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#249Db8"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:fontFamily="@font/raleway_bold"
                android:text="Claim Type:"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/claim_type_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#249Db8"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Claim For:"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/claim_for_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#249Db8"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Claim Details:"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/claim_details_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#249Db8"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.02"
            android:orientation="vertical"
            android:weightSum="2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/pf_white"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@color/pf_white"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical|left"
                    android:text="Total"
                    android:textColor="#414141"
                    android:textSize="14sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/total_price_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="#414141"
                    android:textSize="14sp"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.96"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:layout_width="@dimen/_270sdp"
                        android:layout_height="@dimen/_270sdp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/ic_check" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/home_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:background="@drawable/btn_gradient_green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/back_home_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:gravity="end|center_vertical"
            android:fontFamily="@font/raleway_bold"
            android:text="Go To Home"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/place_order_text_size"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/forward_arrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>