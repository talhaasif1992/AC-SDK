<?xml version="1.0" encoding="utf-8"?>
<EditText
    android:id="@+id/composer_input_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:layout_marginLeft="24dp"
    android:layout_weight="1"
    android:background="@color/intercom_full_transparent_full_white"
    android:cursorVisible="true"
    android:hint="@string/intercom_reply_to_conversation"
    android:imeOptions="flagNoExtractUi"
    android:inputType="textCapSentences|textMultiLine"
    android:maxLines="@integer/intercom_max_composer_lines"
    android:minHeight="56dp"
    android:textColor="@color/intercom_grey_800"
    android:textColorHint="@color/intercom_grey_500"
    android:textSize="16sp"
    android:visibility="gone"
    tools:ignore="UnusedAttribute"
    tools:layout_width="240dp"
    tools:text="This\nIs\nA\nLong\nMessage\nOf\n8\nLines"/>
