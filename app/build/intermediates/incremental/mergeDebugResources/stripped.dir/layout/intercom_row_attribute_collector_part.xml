<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/intercom_cell_horizontal_padding"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/avatarView"
            android:layout_width="@dimen/intercom_avatar_size"
            android:layout_height="@dimen/intercom_avatar_size" />

    </FrameLayout>

    <io.intercom.android.sdk.views.AttributeCollectorCardView
        android:id="@+id/cellLayout"
        style="@style/intercom_card_with_border_and_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/intercom_cell_horizontal_padding"
        android:padding="@dimen/intercom_container_cell_padding"/>

</FrameLayout>
