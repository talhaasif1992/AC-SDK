<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/conversation_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/intercom_full_transparent_full_black"
        app:elevation="0dp"
        app:expanded="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout android:id="@+id/profile_toolbar_coordinator"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:minHeight="@dimen/intercom_toolbar_height"
                         android:visibility="invisible"
                         app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intercom_toolbar_height"
                android:background="@color/intercom_full_transparent_full_black"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="@dimen/intercom_toolbar_height"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/intercom_conversation_list_bottom_padding"
        android:scrollbarStyle="outsideOverlay"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/intercom_row_user_part"/>

    <FrameLayout
        android:id="@+id/reply_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/intercom_reply_options_horizontal_padding"
        android:layout_marginRight="@dimen/intercom_reply_options_horizontal_padding"/>

    <io.intercom.android.sdk.views.IntercomLinkView
        android:id="@+id/intercom_link"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/intercom_link_height"
        android:layout_gravity="bottom|center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/intercom_logo"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/intercom_link_horizontal_padding"
        android:paddingRight="@dimen/intercom_link_horizontal_padding"
        android:text="@string/intercom_we_run_on_intercom"
        android:textColor="@color/intercom_link_text"
        android:textSize="16sp"
        android:textStyle="normal"
        app:fontFamily="sans-serif"/>

    <include layout="@layout/intercom_error_conversation"
             android:visibility="gone"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <View android:id="@+id/toolbar_shadow"
          android:layout_width="match_parent"
          android:layout_height="@dimen/intercom_app_bar_shadow_height"
          android:background="@drawable/intercom_top_shadow"
          app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <include layout="@layout/intercom_admin_profile"/>
    <include layout="@layout/intercom_team_profile"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
