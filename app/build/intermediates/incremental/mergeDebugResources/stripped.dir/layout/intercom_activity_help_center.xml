<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/link_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intercom_post_gradient"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/intercom_close"/>

    <FrameLayout
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/intercom_conversation_card_background">

        <ProgressBar
            android:id="@+id/loading_view"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/intercom_progress_wheel"
            tools:visibility="visible"/>
    </FrameLayout>
</LinearLayout>
