<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/primary_dark"
        android:text="Select Method"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardElevation="@dimen/_10sdp"-->
<!--                app:cardCornerRadius="@dimen/_5sdp"-->
<!--                android:layout_margin="5dp"-->
<!--                android:layout_marginTop="@dimen/_10sdp">-->
                <LinearLayout
                    android:id="@+id/visa_card_option"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:weightSum="5"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_visa_logo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_visa_image" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:text="Visa Card"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18dp"
                        android:layout_weight="4"
                        />
                </LinearLayout>
<!--            </androidx.cardview.widget.CardView>-->
<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardElevation="@dimen/_10sdp"-->
<!--                app:cardCornerRadius="@dimen/_5sdp"-->
<!--                android:layout_margin="5dp">-->
                <LinearLayout
                    android:id="@+id/jazz_cash_option"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:paddingEnd="10dp"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/jazzcash"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:text="Jazz Cash"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18dp"
                        android:layout_weight="4"
                        />



                </LinearLayout>
<!--            </androidx.cardview.widget.CardView>-->


<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardElevation="@dimen/_10sdp"-->
<!--                android:layout_margin="5dp"-->
<!--                app:cardCornerRadius="@dimen/_5sdp">-->

                <LinearLayout
                    android:id="@+id/promo_option"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:weightSum="5"
                    android:gravity="center_vertical">

<!-- #TODO cange Promo logo -->

                    <ImageView
                        android:id="@+id/iv_master_card_logo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_ac_logo_medium"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:text="Promo Code"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18dp"
                        android:layout_weight="4"
                        />

                </LinearLayout>
<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>

    </LinearLayout>


</LinearLayout>