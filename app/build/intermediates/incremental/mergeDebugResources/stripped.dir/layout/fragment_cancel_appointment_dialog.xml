<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_dialogue_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.CancelAppointmentDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_are_you_sure_you_want_to_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:text="Are you sure you\nwant to cancel?"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toTopOf="@+id/tv_choose_one_of_the_options_below"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_choose_one_of_the_options_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one of the options below"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toTopOf="@+id/btn_yes_cancel_it"
            app:layout_constraintEnd_toEndOf="@+id/tv_are_you_sure_you_want_to_cancel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_are_you_sure_you_want_to_cancel"
            app:layout_constraintTop_toBottomOf="@+id/tv_are_you_sure_you_want_to_cancel" />

        <Button
            android:id="@+id/btn_yes_cancel_it"
            android:layout_width="0dp"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_red_border"
            android:fontFamily="@font/raleway"
            android:text="Yes, Cancel it"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_no_i_dont"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_choose_one_of_the_options_below" />

        <Button
            android:id="@+id/btn_no_i_dont"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_green_gradient_round_cornered_background"
            android:fontFamily="@font/raleway"
            android:text="No, I don't"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_yes_cancel_it"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_yes_cancel_it"
            app:layout_constraintTop_toTopOf="@+id/btn_yes_cancel_it" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>