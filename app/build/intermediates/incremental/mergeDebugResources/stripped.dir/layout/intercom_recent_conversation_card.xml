<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_conversation_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/intercom_card_with_border_and_shadow"
    android:layout_marginLeft="@dimen/intercom_home_card_margin"
    android:layout_marginRight="@dimen/intercom_home_card_margin">

    <Space
        android:id="@+id/top_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intercom_conversation_card_padding"/>

    <TextView
        android:id="@+id/recent_conversation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/intercom_conversation_card_padding"
        android:text="@string/intercom_your_conversations"
        android:textColor="@color/intercom_black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/top_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Your conversations"/>

    <TextView
        android:id="@+id/see_previous"
        style="@style/intercom_home_all_conversation_button"
        android:layout_marginRight="@dimen/intercom_conversation_card_padding"
        app:layout_constraintTop_toTopOf="@id/recent_conversation_header"
        app:layout_constraintRight_toRightOf="@id/recent_conversation_card_layout"
        android:text="@string/intercom_see_all"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/inbox_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/recent_conversation_header"/>

    <TextView
        android:id="@+id/new_conversation_button"
        style="@style/intercom_home_new_conversation_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/intercom_conversation_card_padding"
        android:text="@string/intercom_start_a_conversation"
        android:textColor="@color/intercom_main_blue"
        app:layout_constraintTop_toBottomOf="@+id/inbox_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottom_padding"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Space
        android:id="@+id/bottom_padding"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/intercom_conversation_card_padding"/>

</androidx.constraintlayout.widget.ConstraintLayout>
