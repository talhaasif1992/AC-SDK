<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/intercom_cell_horizontal_padding">
    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/intercom_avatar_size"
        android:layout_height="@dimen/intercom_avatar_size"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/intercom_conversation_row_icon_spacer" />

    <LinearLayout
        android:id="@+id/cellLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="56dp"
        android:background="@drawable/intercom_conversation_card_background"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingTop="20dp"/>
</LinearLayout>
