<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/chathead_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/intercom_chat_overlay_width"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingRight="@dimen/intercom_chat_overlay_padding_right">

    <FrameLayout
        android:id="@+id/chat_full_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/chathead_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/intercom_chat_bubble_bottom_margin"
            android:layout_marginLeft="@dimen/intercom_chat_overlay_text_margin_left"
            android:layout_marginTop="@dimen/intercom_chat_full_top_margin"
            android:background="@drawable/intercom_chat_bubble"
            android:orientation="vertical"
            android:paddingLeft="@dimen/intercom_chat_overlay_text_padding_left"
            android:paddingRight="@dimen/intercom_chat_overlay_text_padding_right">

            <TextView
                android:id="@+id/chathead_text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/intercom_grey_800"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:id="@+id/chat_overlay_overflow_fade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="23dp"
            android:alpha="0.7"
            android:background="@drawable/intercom_part_fade_bottom"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/chat_avatar_container"
        android:layout_width="@dimen/intercom_preview_chathead_avatar_diameter"
        android:layout_height="@dimen/intercom_preview_chathead_avatar_diameter"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/intercom_chat_head_bottom_margin"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            android:background="@drawable/intercom_circular_shadow"/>

        <ImageView
            android:id="@+id/chathead_avatar"
            android:layout_width="@dimen/intercom_preview_chathead_avatar_diameter"
            android:layout_height="@dimen/intercom_preview_chathead_avatar_diameter"
            android:layout_gravity="bottom" />
    </FrameLayout>

</FrameLayout>
