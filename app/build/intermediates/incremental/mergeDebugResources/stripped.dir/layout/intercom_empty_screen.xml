<?xml version="1.0" encoding="utf-8"?>
<io.intercom.android.sdk.views.IntercomErrorView
    android:id="@+id/error_layout_empty_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:background="#fff">

    <TextView
        android:id="@+id/empty_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/empty_text_subtitle"
        android:text="@string/intercom_nothing_to_see_here_yet"
        android:textColor="@color/intercom_grey_700"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/empty_text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/intercom_no_messages_from_the_team"
        android:textColor="@color/intercom_grey_500"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/close_button"
        style="@style/intercom_home_error_button"
        android:layout_below="@+id/empty_text_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/intercom_close" />

</io.intercom.android.sdk.views.IntercomErrorView>