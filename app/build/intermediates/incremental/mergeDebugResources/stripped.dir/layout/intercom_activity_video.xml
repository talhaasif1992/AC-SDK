<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fullscreen_video_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intercom_black">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <FrameLayout
        android:id="@+id/video_view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intercom_black"/>

    <ProgressBar
        android:id="@+id/loading_view"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/intercom_progress_wheel"/>

    <io.intercom.android.sdk.views.IntercomToolbar
        android:id="@+id/intercom_toolbar"
        style="@style/intercom_toolbar_style"/>

</FrameLayout>
