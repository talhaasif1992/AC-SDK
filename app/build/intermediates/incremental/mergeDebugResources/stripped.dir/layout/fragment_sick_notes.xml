<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bed_rest_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/bed_rest_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#238cA8"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/bed_rest_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bed_rest_textview"
            android:textColor="#238cA8"
            android:textSize="@dimen/dimen_17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sick_notes_description_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bed_rest_relative_layout"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/sick_notes_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dimen_16" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvSickNoteEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="No Sick Note Available"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/colorSecondary"
        android:visibility="gone"/>
</RelativeLayout>