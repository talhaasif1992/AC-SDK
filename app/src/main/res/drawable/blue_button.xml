<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:color="@color/colorGreenButtonSelected" tools:targetApi="lollipop">
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGray" />
            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/colorGrayDark" android:width="2dp"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueButtonSelected" />
            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/colorBlueDark" android:width="2dp"></stroke>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueButton" />
            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/colorBlueDark" android:width="2dp"></stroke>
        </shape>
    </item>
</selector>
