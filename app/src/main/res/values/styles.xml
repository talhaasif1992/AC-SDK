<!--    </style>-->



    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="tab_text2" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

</resources>
