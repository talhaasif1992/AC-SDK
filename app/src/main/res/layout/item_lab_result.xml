<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?selectableItemBackground"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"
                android:gravity="center"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorText"
                android:text="Lab Order "

                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                />
            <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:gravity="center"
                android:fontFamily="@font/lato_black"
                android:textColor="@color/colorOrange"
                android:text="PENDING"
                android:layout_alignParentRight="true"

                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/dimen_13sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorText"
            android:text="Chughtai Lab"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorTextLight"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <LinearLayout
            android:id="@+id/lytReportsButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/btnReorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button"
                android:text="REORDER"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/lato_black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                />
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:text="DOWNLOAD"
                android:layout_weight="1"
                android:textColor="@color/colorGreenDark"
                android:fontFamily="@font/lato_black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider="@drawable/shape_line"
            app:showDividers="beginning|middle"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/txtLabTest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dimen_14sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorText"
                android:visibility="visible"
                android:minHeight="@dimen/minHeight"
                android:gravity="center_vertical"

                />
            <TextView
                android:id="@+id/txtLabTest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dimen_14sp"
                android:visibility="visible"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorText"
                android:minHeight="@dimen/minHeight"
                android:gravity="center_vertical"

                />
            <TextView
                android:id="@+id/txtLabTest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dimen_14sp"
                android:visibility="visible"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorText"
                android:minHeight="@dimen/minHeight"
                android:gravity="center_vertical"


                />
        </androidx.appcompat.widget.LinearLayoutCompat>





    </LinearLayout>








</androidx.cardview.widget.CardView>