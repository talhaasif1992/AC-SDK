<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:layout_width="125dp"
        android:layout_height="84dp"
        android:background="@drawable/bank_alfalah_logo"
        />



    <TextView
        android:id="@+id/tv_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textColor="@color/bank_alfalah_text_color"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_26"
        />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="You have just received 20% Discount from Bank Alfalah. \n Enjoy Healthcare without the Hassle with AugmentCare."
        />
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="OK"
        android:textColor="@color/pf_white"
        android:background="@drawable/btn_bank_alfalah_states"
        android:layout_marginTop="20dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bank_alfalah_footer"
        />
</LinearLayout>
