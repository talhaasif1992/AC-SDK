<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rating_main_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_border"
    android:orientation="vertical"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lytheading"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:text="Appointment Type"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/raleway_bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dimen_16"
            android:text="Select appointment type you want to make"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/raleway"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lytheading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:gravity="start"
        android:weightSum="2"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_button_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online"
            android:paddingStart="@dimen/_5sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/colorSecondary"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medical_practice_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>

