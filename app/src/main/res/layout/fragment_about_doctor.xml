<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.augmentcare.patient.fragments.AboutFragmentDoctor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.skyhope.showmoretextview.ShowMoreTextView
                android:id="@+id/text_view_show_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_10sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:layout_marginTop="@dimen/_20sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/_12sdp"
                >

                <ImageView android:layout_height="@dimen/_20sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:src="@drawable/ic_credit_card"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="PMDC Licence No: "
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/pmdcTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="raleway"
                    android:text="1234-5"
                    android:textColor="@color/colorGrayDark"
                    android:gravity="start"/>


                <TextView
                    android:id="@+id/pmdcView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:text="View"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
